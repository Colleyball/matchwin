page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background:url('http://www.volleywang.cn/liansaiquan/images/matchbox/sb/bg.png') no-repeat;
  background-size: 100%;
  background-position: bottom;
  position: absolute;
  background-attachment: fixed;
}
.top{
  width: 680rpx;
  height: 150rpx;
  line-height: 150rpx;
  margin-left: auto;
  margin-right: auto;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.2);
  background: url('https://volleywang.cn/liansaiquan/images/main/title-bg.png') center no-repeat;
  background-size: contain;
  text-align: left;
  padding-left: 50rpx;
  font-size: 55rpx;
  margin-bottom: 30rpx;
  color: #1A1A1A
}

.player{
  width: 680rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 35rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0,0.3);
}

.checkbox{
  width: 70rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  text-align: center;
}

.userpic{
  height: 80rpx;
  width: 80rpx;
  font-size: 60rpx;
  line-height: 80rpx;
  text-align:center;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 50rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.playerinfo{
  height: 100rpx;
  width: 480rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.name{
  font-size: 35rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid blueviolet;
}

.position{
  font-size: 25rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row
}

.submit{
 border: 2px solid rgba(0, 0, 0, 0.2);
 border-radius: 20px;
 margin-top: 30px;
 width:680rpx;
 height:100rpx;
 line-height: 100rpx;
 background-color: rgba(241, 124, 103, 0.8);
 color: white
}

.submit2{
 border: 2px solid rgba(0, 0, 0, 0.2);
 border-radius: 20px;
 margin-top: 30px;
 width:680rpx;
 height:100rpx;
 line-height: 100rpx;
 background-color:#EBEDF4;
 color:black
}

.cover{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(255,255,255,0.95);
  overflow: hidden;
  z-index: 9998;
}