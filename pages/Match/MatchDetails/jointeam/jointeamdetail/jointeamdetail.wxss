.Top{
    height: 150rpx;
    background-image: url("https://volleywang.cn/liansaiquan/images/mylike/mylike.png");
    background-size: cover;
    background-repeat: no-repeat;
    text-align: center;
    line-height: 150rpx;
    color: white;
    font-size: 60rpx;
    margin-bottom: 20rpx;
    width: 100%;
}

.player{
  width: 680rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 35rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0,0.3);
}

.userpic{
  height: 80rpx;
  width: 80rpx;
  font-size: 60rpx;
  line-height: 80rpx;
  text-align:center;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 50rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.edit{
  height: 80rpx;
  width: 80rpx;
  font-size: 60rpx;
  line-height: 80rpx;
  text-align:center;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 50rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.playerinfo{
  height: 100rpx;
  width: 470rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.name{
  font-size: 35rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid blueviolet;
}

.position{
  font-size: 25rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row
}