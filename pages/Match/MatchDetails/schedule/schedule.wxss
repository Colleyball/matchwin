page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background:url('http://www.volleywang.cn/liansaiquan/images/matchbox/sb/bg.png') no-repeat;
  background-size: 100%;
  background-position: bottom;
  position: absolute;
  background-attachment: fixed;
}

.topbar{
  height:100rpx;
  width: 100%;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  z-index: 9999;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0,0.3);
  background-color: rgba(255,255,255,0.95);
}

.item{
  width: 33.3%;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
}

.cover{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(255,255,255,0.95);
  overflow: hidden;
  z-index: 9998;
}

.resultlist{
  margin-top: 140rpx;
}

/*选择赛程*/
.result{
  position: relative;
  width: 680rpx;
  height:250rpx;
  background-color: white;
  padding: 0;
  border-radius: 20rpx;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0,0.3);
  margin: 0rpx 0rpx 70rpx 35rpx;
  text-align: center;
}

.teamA{
  width: 100%;
  height: 125rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0,0.1);
}

.teamB{
  width: 100%;
  height: 125rpx;
  line-height: 165rpx;
}

.vs{
  width: 640rpx;
  height: 80rpx;
  background-color: #3369E8;
  border-radius: 60rpx;
  line-height:80rpx;
  margin-top: -165rpx;
  margin-left: auto;
  margin-right: auto;
  color: white;
  z-index: 9999;
  font-size: 35rpx;
}