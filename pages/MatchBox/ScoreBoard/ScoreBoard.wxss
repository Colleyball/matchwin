.contain{
  width: 100%;
  height: 100%;
  background:url('http://www.volleywang.cn/liansaiquan/images/matchbox/sb/bg.png') no-repeat;
  background-size: 100%;
  background-position: bottom;
  position: absolute;
}

.score{
  width: 100%;
  height: 400rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.teamname{
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  height: 100rpx;
  padding-top: 15rpx;
}

.teamA{
  height: 70rpx;
  line-height: 70rpx;
  width: 40%;
  margin-left: 5%;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
}

.vs{
  margin-top: 10rpx;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  margin-left: 12.5rpx;
  border-radius: 35rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  font-size: 30rpx;
}

.teamB{
  height: 70rpx;
  line-height: 70rpx;
  width: 40%;
  margin-left: 12.5rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
}

.teamscore{
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  height: 300rpx;
}

.scoreA{
  height: 300rpx;
  line-height: 300rpx;
  width: 45%;
  margin-left: 2.25%;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  font-size: 150rpx;
}

.scoreB{
  height: 300rpx;
  line-height: 300rpx;
  width: 45%;
  margin-left: 5%;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  font-size: 150rpx;
}

.tips{
  position: relative;
  background-color: #ddf0ed;
  line-height: 70rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-left: auto;
  margin-right: auto;
  opacity: 0;
  margin-top: 250px;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
}

.control{
  margin-left: 5%;
  margin-top: 50rpx;
  width: 90%;
  height: auto;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  color: rgba(0, 0, 0, 0.6);
}

.addscore{
  display: flex;
  flex-direction: row;
  height: 100rpx;
}

.add{
  width: 50%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  line-height: 100rpx;
  text-align: center;
}

.reducescore{
  display: flex;
  flex-direction: row;
  height: 100rpx;
}
.reduce{
  width: 50%;
  line-height: 100rpx;
  text-align: center;
}

.history{
  position: fixed;
  bottom:20rpx;
  right:20rpx;
  line-height: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 38rpx;
  background-color: rgba(221, 240, 237, 0.6);
  color: rgba(0, 0, 0, 0.8);
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  text-align: center;
}