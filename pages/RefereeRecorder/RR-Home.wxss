/* pages/MatchBox/ScoreBoard/SB-start.wxss */
.container{
  width: 100%;
  height: 100%;
  background:url('http://www.volleywang.cn/liansaiquan/images/matchbox/sb/bg.png') no-repeat;
  background-size: 100%;
  background-position: bottom;
  position: absolute;
}

.cover{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(255,255,255,0.95);
  overflow: hidden;
  z-index: 9998;
}

.menu{
  position: relative;
  width: 100%;
  height: 600rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item{
  width: 680rpx;
  height: 150rpx;
  border-radius: 20rpx;
  line-height: 150rpx;
  text-align: center;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, 0.2);
  margin-top: 50rpx;
}

.resultlist{
  margin-top: 70rpx;
  z-index: 9999;
  position:absolute;
}

.result{
  position: relative;
  width: 680rpx;
  height:250rpx;
  background-color: white;
  padding: 0;
  border-radius: 20rpx;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0,0.3);
  margin: 0rpx 0rpx 70rpx 35rpx;
  text-align: center;
}

.teamA{
  width: 100%;
  height: 125rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0,0.1);
}

.teamB{
  width: 100%;
  height: 125rpx;
  line-height: 165rpx;
}

.vs{
  width: 640rpx;
  height: 200rpx;
  background-color: #3369E8;
  border-radius: 16rpx;
  line-height:200rpx;
  margin-top: -225rpx;
  margin-left: auto;
  margin-right: auto;
  color: white;
  z-index: 9999;
  font-size: 55rpx;
}

.add{
 line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: white;
  position: fixed;
  bottom: 15rpx;
  right: 325rpx;
  background-color: blueviolet;
  width: 100rpx;
  height: 100rpx;
  border-radius: 75rpx;
  box-shadow: 0px 0px  50px rgba(0, 0, 0, 0.6);
  z-index: 9999;
}