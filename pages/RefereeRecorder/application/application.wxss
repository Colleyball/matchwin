.container{
  width: 100%;
  height: 100%;
  background:url('http://www.volleywang.cn/liansaiquan/images/matchbox/sb/bg.png') no-repeat;
  background-size: 100%;
  background-position: bottom;
  position: absolute;
  align-items: center
}

.tablename{
  border: 2px solid rgba(0, 0, 0, 0.2);
  border-radius: 40px;
  width:680rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin:0 auto 20rpx auto;
  text-align: center;
}

.inputView{
  font-size: 50rpx;
  display: flex;
  width:680rpx;
  height:100rpx;
  line-height: 100rpx;
  flex-direction: row;
  background-color: whitesmoke;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
  text-align: center;
}

