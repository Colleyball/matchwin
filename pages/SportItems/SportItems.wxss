page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}

.container{
  padding-top:35rpx;
  margin: 0;
  background-color: white;
}

.pic {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 0;
  padding: 0;
  border: 0;
  position: absolute;
  z-index: 10
}

.HomePic {
  width: 680rpx;
  height: 510rpx;
  margin:0;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 100rpx 0rpx rgba(0, 0, 0, 0.3);
}

.HomeTxtZh{
  text-align: left;
  width: 80%;
  font-size: 80rpx;
  color: rgba(255, 255, 255, 1);
  margin-top:-500rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
}

.HomeTxtEn{
  text-align: left;
  width: 80%;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 1);
  margin-top:10rpx;
  margin-bottom:200rpx;
}


.AllTeam {
  height: 80rpx;
  line-height: 80rpx;
  width: 600rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around
}

.AllTeam-img {
  height: 50rpx;
  width: 50rpx;
}

.AllTeam-text {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-right: 80rpx;
  color: rgba(0, 0, 0, 0.8)
}

.TopTeam{
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  color: white;
  position: absolute
}

.TopTeamTitle{
  position: relative;
  width: 620rpx;
  margin: 450rpx 0 -530rpx 45rpx;
  height:700rpx;
  line-height: 250rpx;
  font-size: 50rpx;
  text-align: left;
  padding-left: 40rpx;
  background: linear-gradient(to bottom, rgba(241, 124, 103, 1),rgba(0, 0, 0, 0));
  border-radius: 30rpx;
  color: white;
}

.item{
  position: relative;
  width: 600rpx;
  margin-left: 75rpx;
  height:50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.rank{
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.2);
  color: black;
}

.teamname{
  width: 400rpx;
  height: 50rpx;
  margin-left: 25rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.2);
  color: black;
}

.exp{
  width: 100rpx;
  height: 50rpx;
  margin-left: 25rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.2);
  color: black;
}

