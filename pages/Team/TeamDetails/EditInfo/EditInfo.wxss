page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background:url('http://www.volleywang.cn/liansaiquan/images/matchbox/sb/bg.png') no-repeat;
  background-size: 100%;
  background-position: bottom;
  position: absolute;
  background-attachment: fixed;
}

.top{
  width: 680rpx;
  height: 150rpx;
  line-height: 150rpx;
  margin-left: auto;
  margin-right: auto;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.2);
  background: url('https://volleywang.cn/liansaiquan/images/main/title-bg.png') center no-repeat;
  background-size: contain;
  text-align: left;
  padding-left: 50rpx;
  font-size: 55rpx;
  margin-bottom: 30rpx;
  color: #1A1A1A
}

.playername{
  font-size: 50rpx;
  width:680rpx;
  height:250rpx;
  margin-left: 35rpx;
  line-height: 250rpx;
  background-color: whitesmoke;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.tablename{
  border: 2px solid rgba(0, 0, 0, 0.2);
  border-radius: 40px;
  width:680rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin:0 auto 20rpx auto;
  text-align: center;
}

.inputView{
  font-size: 50rpx;
  display: flex;
  width:680rpx;
  height:100rpx;
  margin-left: 35rpx;
  line-height: 100rpx;
  flex-direction: row;
  background-color: whitesmoke;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.submit{
 border: 2px solid rgba(0, 0, 0, 0.2);
 border-radius: 10px;
 margin-top: 15px;
 width:680rpx;
 height:100rpx;
 margin-left: 35rpx;
 line-height: 100rpx;
 background-color: rgba(241, 124, 103, 0.8);
 color: white
}