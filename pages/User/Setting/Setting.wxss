page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.Top{
  height: 400rpx;
  background-image: url("https://volleywang.cn/liansaiquan/images/wechat/user/setting/bg.png");
  background-size: cover;
  background-repeat: no-repeat;
  text-align: center;
  width:680rpx;
  border-radius: 20rpx;
  margin-left: 35rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
}

.userpic{
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  box-shadow: 0px 5px 10px black;
  margin-top: 55rpx;
}

.name{
  color: #fff;
  margin-top: 20rpx;
}

.card{
  display: flex;
  width:680rpx;
  height:auto;
  margin-left: 35rpx;
  line-height: 60rpx;
  flex-direction: row;
  background-color: whitesmoke;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
}

.pic{
  background: url('https://volleywang.cn/liansaiquan/images/wechat/user/setting/about.png') no-repeat center;
  background-size: auto 100rpx;
  position: relative;
  width: 150rpx;
  height: auto;
  margin: 0;
}

.title{
  position: relative;
  width: 490rpx;
  height: auto;
  font-size: 35rpx;
  margin: 0;
  color: rgba(0, 0, 0, 0.8);
  border-left: 1rpx solid rgba(0, 0, 0, 0.4);
  padding-left: 20rpx;
}

.pic2{
  background: url('https://volleywang.cn/liansaiquan/images/wechat/user/setting/phone.png') no-repeat center;
  background-size: auto 100rpx;
  position: relative;
  width: 150rpx;
  height: auto;
  margin: 0;
}