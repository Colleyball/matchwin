page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}

.login-cover {
  height: 100%;
  width: 100%;
  background: #fff;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10
}

.login-logo {
  width: 200rpx;
  height: 200rpx;
  margin: 100rpx 0 0 0 
}

.login-btn {
  width: 250rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  background: #09BB07;
  color: white;
  text-align: center;
  margin: 120rpx 0 0 0 
}

.login-tip {
  width: 80%;
  font-size: 25rpx;
  color: rgba(0,0,0,0.5);
}

.Top{
  height: 400rpx;
  background-image: url("https://volleywang.cn/liansaiquan/images/wechat/user/bg.jpg");
  background-size: cover;
  background-position: center;
  text-align: center;
  width:680rpx;
  border-radius: 20rpx;
  margin-left: 35rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
}

.userpic{
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  box-shadow: 0px 5px 10px black;
  margin-top: 55rpx;
}

.name{
  color: #fff;
  margin-top: 20rpx;
}

.card{
  display: flex;
  width:680rpx;
  height:160rpx;
  margin-left: 35rpx;
  line-height: 160rpx;
  flex-direction: row;
  background-color: whitesmoke;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
}

.pic{
  position: relative;
  width: 100rpx;
  height: 100rpx;
  left: 50rpx;
  top: 30rpx;
}

.title{
  position: relative;
  width: 300rpx;
  height: 90rpx;
  left: 80rpx;
}