page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.container{
  padding-top:5rpx;
  margin: 0;
  background-color: #EDEDED
}

.cover{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(255,255,255,0.8);
  overflow: hidden;
}

.topbar {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0rpx 0rpx 50rpx rgba(0, 0, 0, 0.5);
}

.userpic {
  margin-top: -10rpx;
  margin-left: 20rpx;
  width: 70rpx;
  height:70rpx;
  border-radius: 50%;
}

.username {
  margin-top: -10rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  width: 120rpx;
  text-align: left
}

.weather {
  width: 500rpx;
  font-size: 30rpx;
  text-align: right;
  margin-top: -10rpx;
  color: rgba(0, 0, 0, 0.5);
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow:hidden;
}

.matchlive {
  margin-top: 100rpx;
  width: 680rpx;
  margin-left: 0;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.live-teamA {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  background: #fff;
  font-size: 30rpx;
  color: rgba(0,0,0,0.6);
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow:hidden;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0, 0.5);
}

.live-score {
  width: 180rpx;
  height: 130rpx;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0, 0.5);
  background: rgba(51, 105, 232, 1);
}

.live-scoreA {
  color: white;
  width: 80rpx;
  height: 130rpx;
  line-height: 130rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  background: rgba(51, 105, 232, 1);
  font-size: 55rpx;
}

.live-vs {
  color: white;
  width: 20rpx;
  height: 130rpx;
  line-height: 130rpx;
  background: rgba(51, 105, 232, 1);
}

.live-scoreB {
  color: white;
  width: 80rpx;
  height: 130rpx;
  line-height: 130rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  background: rgba(51, 105, 232, 1);
  font-size: 55rpx;
}

.live-teamB {
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  background: #fff;
  font-size: 30rpx;
  color: rgba(0,0,0,0.6);
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow:hidden;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0, 0.5);
}

.live-tip {
  width: 680rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  margin-top: -60rpx;
  margin-bottom: 25rpx;
  color: rgba(255, 255, 255, 0.7)
}


.list {
  width: 100%;
}

.Game {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 0;
  padding: 0;
}

.HomePic {
  width: 680rpx;
  height: 320rpx;
  margin:0;
  border-radius: 20rpx;
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0, 0.5);
}

.HomeTxtZh{
  text-align: center;
  width: 80%;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top:-150rpx;
  margin-bottom:140rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.5);
}

.weather-box {
  width: 550rpx;
  height: 540rpx;
  position: fixed;
  border-radius: 25rpx;
  top:200rpx;
  left:100rpx;
  background:rgba(255,255,255,0.9);
  box-shadow: 0rpx 10rpx 50rpx rgba(0, 0, 0, 0.5);
}

.weather-detail {
  width: 500rpx;
  margin-left: 25rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: rgba(0, 0, 0, 0.8);
}

.close{
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: white;
  position: fixed;
  bottom: 15rpx;
  right: 325rpx;
  background-color: blueviolet;
  width: 100rpx;
  height: 100rpx;
  border-radius: 75rpx;
  box-shadow: 0px 0px  50px rgba(0, 0, 0, 0.6);
}

