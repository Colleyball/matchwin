page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.container{
  padding-top:5rpx;
  margin: 0;
  background-color: black;
}

.topbar {
  width: 100%;
  height: 80rpx;
  background: #fff;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(255, 255, 255, 0.5);
}

.userpic {
  margin-top: -10rpx;
  margin-left: 20rpx;
  width: 70rpx;
  height:70rpx;
  border-radius: 50%;
}

.username {
  margin-top: -10rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  width: 120rpx;
  text-align: left
}

.weather {
  width: 500rpx;
  font-size: 30rpx;
  text-align: right;
  margin-top: -10rpx;
  color: rgba(0, 0, 0, 0.5);
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow:hidden;
}

.list {
  width: 100%;
  margin-top: 100rpx;
}

.Game {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 0;
  padding: 0;
}

.HomePic {
  width: 680rpx;
  height: 320rpx;
  margin:0;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx rgba(255, 255, 255, 0.3);
}

.HomeTxtZh{
  text-align: center;
  width: 80%;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top:-150rpx;
  margin-bottom:140rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.5);
}
