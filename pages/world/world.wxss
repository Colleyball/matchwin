page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.container{
  padding-top:5rpx;
  margin: 0;
  background-color: #EDEDED
}

.topbar {
  width: 100%;
  height: 80rpx;
  background: rgba(241, 124, 103, 1);
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0rpx 0rpx 50rpx rgba(0, 0, 0, 0.5);
}

.username {
  margin-top: -10rpx;
  margin-left: 35rpx;
  font-size: 35rpx;
  width: 150rpx;
  text-align: left;
  color:white
}

.weather {
  width: 530rpx;
  font-size: 30rpx;
  text-align: right;
  margin-top: -10rpx;
  color: rgba(255, 255, 255, 0.8);
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow:hidden;
}

.news_list{
  margin-top: 90rpx;
  width: 680rpx;
}

.news {
  height: 150rpx;
  width: 100%;
  border-radius: 20rpx;
  margin-top: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
  box-shadow: 0rpx 10rpx 30rpx rgba(0, 0, 0, 0.4);
}

.news_title {
  margin-left: 5%;
  width: 90%;
  height: 100rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.news_info {
  margin-left: 5%;
  width: 90%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 25rpx;
}