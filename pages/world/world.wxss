page,.page {
  font-family: 'PingFang SC', 'Helvetica Neue' ,Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.container{
  padding-top:5rpx;
  margin: 0;
  background-color: #EDEDED
}

.topbar {
  width: 100%;
  height: 80rpx;
  background: rgba(241, 124, 103, 1);
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0rpx 0rpx 50rpx rgba(0, 0, 0, 0.5);
}

.username {
  margin-top: -10rpx;
  margin-left: 35rpx;
  font-size: 35rpx;
  width: 150rpx;
  text-align: left;
  color:white
}

.weather {
  width: 530rpx;
  font-size: 30rpx;
  text-align: right;
  margin-top: -10rpx;
  color: rgba(255, 255, 255, 0.8);
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow:hidden;
}

.news_list{
  margin-top: 90rpx;
  width: 100%;
}

.news {
  height: auto;
  width: 100%;
  padding: 10rpx 0 10rpx 0;
  margin-top: 10rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.news_title {
  margin-left: 5%;
  width: 90%;
  height: 80rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  font-size: 30rpx;
}

.news_description {
  margin-left: 5%;
  width: 90%;
  height: 120rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 40rpx;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
}

.news_description_image {
  margin-left: 5%;
  width: 90%;
  height: 220rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center
}

.news_description_image_text {
  width: 300rpx;
  height: 100%;
  display: flex;
  flex-direction: column
}

.news_description_image_title {
  width: 100%;
  height: 70%;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 30rpx;
}

.news_description_image_from{
  width: 100%;
  height: 30%;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6)
}

.news_description_image_pic {
  height: 220rpx;
  width: 330rpx;
}

.news_from{
  margin-left: 5%;
  width: 85%;
  text-align: right;
  margin-top:-25rpx;
  margin-bottom: 10rpx;
  height: 30rpx;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.6)
}

.tip {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.5);
  font-size: 25rpx;
  text-align: center;
  background: #fff;
  border-top: 1rpx solid black
}